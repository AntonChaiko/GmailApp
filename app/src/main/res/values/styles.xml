<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:previewImage">@drawable/ic_attach_file</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/TextViewPadding</item>
    </style>

    <style name="CardViewStyle">
        <item name="android:layout_height">@dimen/CardViewSize</item>
        <item name="android:layout_width">@dimen/CardViewSize</item>
        <item name="android:elevation">@dimen/CardViewElevation</item>
    </style>
</resources>