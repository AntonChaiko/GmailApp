<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/from_field_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SADSADSA"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="0dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/subject_field_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SADSADSA"
            app:layout_constraintTop_toBottomOf="@+id/from_field_text_view"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/date_field_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SADSADSA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subject_field_text_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>